<% provide(:title, 'マンガ登録') %>
<h1>マンガ登録</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@book) do |f| %>
            <%= f.label 'タイトル' %>
            <%= f.text_field :title %>
        
            <%= f.label '作者' %>
            <%= f.text_field :author %>
        
            <%= f.label '巻数' %>
            <%= f.text_field :number %>
        
            <%= f.label '出版社' %>
            <%= f.collection_select :publisher, Publisher.all, :name, :name, include_blank: true %>
        
            <%= f.submit "登録", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>

