<% provide(:title, 'Regist books') %>
<h1>Regist books</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@book) do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>
        
            <%= f.label :author %>
            <%= f.text_field :author %>
        
            <%= f.label :number %>
            <%= f.text_field :number %>
        
            <%= f.submit "Regist your books", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>

